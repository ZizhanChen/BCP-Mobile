<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bcp.web.bcpgradebook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bell_shield"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="bcp.web.bcpgradebook.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="bcp.web.bcpgradebook.GradeViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_grade_view" >
        </activity>
        <activity
            android:name="bcp.web.bcpgradebook.CourseDetailActivity"
            android:label="@string/title_activity_course_detail" >
        </activity>
        <activity
            android:name="bcp.web.bcpgradebook.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="bcp.web.bcpgradebook.AnnouncementsActivity"
            android:label="@string/title_activity_announcements" >
        </activity>
        <activity
            android:name="bcp.web.bcpgradebook.NewsRssActivity"
            android:label="@string/title_activity_news_rss" >
        </activity>
    </application>

</manifest>